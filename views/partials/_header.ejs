<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
          <% if (user) { %>
            <form action="/logout" method="POST" style="margin-left: auto; margin-right: 0">
              <label for="login"> Signed in as: <%= user.email %>   </label>
              <button type="submit" class="btn btn-outline-secondary">Logout</button>
              </form>
          <% } else { %>
            <form class="form-inline" action="/login" method="POST" style="margin-left: auto; margin-right: 0">
            <input
              class="form-control"
              type="text"
              name="email"
              placeholder="example@example.com"
              style="width: 200px; margin: 1em"
            />
            <button type="submit" class="btn btn-outline-secondary">Sign In</button>
            </form>
          <% } %>
    </div>
  </nav>
</header>